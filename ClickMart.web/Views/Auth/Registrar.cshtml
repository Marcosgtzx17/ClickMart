@model ClickMart.web.DTOs.UsuarioDTOs.UsuarioRegistroDTO
@{
    ViewData["Title"] = "Registro";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
        <form asp-action="Registrar" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Direccion" class="form-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <button class="btn btn-success" type="submit">Crear cuenta</button>
            <div class="text-danger mt-2">@ViewBag.Error</div>
            @{
                var msg = ViewBag.Error as string;
            }
            @if (!string.IsNullOrWhiteSpace(msg))
            {
                <div id="validation-required" class="alert alert-warning" role="alert">
                    @msg
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </form>
    </div>
</div>