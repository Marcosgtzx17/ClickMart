@model ClickMart.web.DTOs.DistribuidorDTOs.DistribuidorUpdateDTO
@{
    ViewData["Title"] = "Editar distribuidor";
}

<h2>Editar distribuidor</h2>

<form asp-action="Edit" method="post" class="card p-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DistribuidorId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Gmail" class="form-label"></label>
            <input asp-for="Gmail" class="form-control" />
            <span asp-validation-for="Gmail" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FechaRegistro" class="form-label"></label>
            <input asp-for="FechaRegistro" type="date" class="form-control" />
            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" rows="3" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
