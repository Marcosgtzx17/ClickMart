@model List<ClickMart.web.DTOs.ResenaDTOs.ResenaResponseDTO>
@{
    ViewData["Title"] = "Reseñas";
    var users = ViewBag.UserNames as Dictionary<int, string> ?? new();
    var prods = ViewBag.ProductNames as Dictionary<int, string> ?? new();
}

<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Reseñas</h1>
        <p class="store-subtitle mb-0">Opiniones de clientes sobre productos</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">Nueva reseña</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success shadow-sm">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
}
@if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
{
    <div class="alert alert-danger shadow-sm">@ViewBag.Error</div>
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <table class="table table-modern table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:90px">#</th>
                    <th>Usuario</th>
                    <th>Producto</th>
                    <th style="width:220px">Calificación</th>
                    <th style="width:160px">Fecha</th>
                    <th class="text-end" style="width:280px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    var i = 1;
                    foreach (var r in Model)
                    {
                        <tr class="row-hover">
                            <td>
                                <span class="badge rounded-pill bg-info-subtle text-info-emphasis border">#@i</span>
                            </td>

                            <td class="fw-semibold">
                                @(users.ContainsKey(r.UsuarioId) ? users[r.UsuarioId] : r.UsuarioId.ToString())
                            </td>

                            <td class="fw-semibold">
                                @(prods.ContainsKey(r.ProductoId) ? prods[r.ProductoId] : r.ProductoId.ToString())
                            </td>

                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="stars-view" aria-label="@($"{r.Calificacion} de 5")">
                                        @for (var s = 1; s <= 5; s++)
                                        {
                                            <span class="star @(s <= r.Calificacion ? "active" : "")">★</span>
                                        }
                                    </span>
                                    <span class="badge rounded-pill bg-success-subtle text-success-emphasis border">
                                        @r.Calificacion / 5
                                    </span>
                                </div>
                            </td>

                            <td>@r.FechaResena.ToLocalTime().ToString("yyyy-MM-dd")</td>

                            <td class="text-end">
                                <div class="actions">
                                    <a class="btn btn-sm btn-outline-secondary btn-action"
                                       asp-action="Edit" asp-route-id="@r.ResenaId">Editar</a>

                                    <!-- Enlace GET a la vista Delete (sin confirm y sin POST aquí) -->
                                    <a class="btn btn-sm btn-outline-danger btn-action"
                                       asp-action="Delete" asp-route-id="@r.ResenaId">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center py-5 text-muted">Sin datos</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
