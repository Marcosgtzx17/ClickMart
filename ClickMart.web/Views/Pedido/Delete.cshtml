@model ClickMart.web.DTOs.PedidoDTOs.PedidoResponseDTO
@{
    ViewData["Title"] = "Eliminar pedido";
}

<!-- HERO -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Eliminar pedido</h1>
        <p class="store-subtitle mb-0">Esta acción no se puede deshacer</p>
    </div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Volver al listado</a>
</div>

<div class="card shadow-sm border-0 rounded-4 p-3 p-md-4">
    <!-- Callout de confirmación -->
    <div class="rounded-4 p-3 p-md-4 mb-4 d-flex align-items-start gap-3"
         style="background:#fffaf0;border:1px solid #fde68a;box-shadow:0 10px 25px rgba(2,6,23,.05);">
        <div class="d-flex align-items-center justify-content-center rounded-circle"
             style="width:42px;height:42px;background:#fffbeb;border:1px solid #fde68a;flex:0 0 42px;">
            <span class="fw-bold" style="color:#b45309;">!</span>
        </div>
        <div class="flex-grow-1">
            <div class="fw-semibold mb-1" style="letter-spacing:.02em;color:#7c3aed;">Confirmación requerida</div>
            <div class="text-muted">¿Confirmas eliminar este pedido? Esta operación es <strong>irreversible</strong>.</div>
        </div>
    </div>

    <!-- Resumen en grid -->
    <div class="detail-grid-cat">
        <div class="detail-item-cat">
            <div class="label-cat">Pedido</div>
            <div class="value-cat fw-medium">#@Model.PedidoId</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Usuario</div>
            <div class="value-cat">@Model.UsuarioId</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Total</div>
            <div class="value-cat">@((Model.Total ?? 0m).ToString("C"))</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Fecha</div>
            <div class="value-cat">@Model.Fecha.ToString("yyyy-MM-dd")</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Pago</div>
            <div class="value-cat">@Model.PagoEstado</div>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.PedidoId" />
        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-secondary btn-action">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-action">Eliminar</button>
        </div>
    </form>
</div>
