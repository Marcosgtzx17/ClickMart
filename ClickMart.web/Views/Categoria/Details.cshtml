@model ClickMart.web.DTOs.CategoriaDTOs.CategoriaResponseDTO
@{
    ViewData["Title"] = "Detalle de categoría";
    var esAdmin = User.IsInRole("Admin") || User.IsInRole("Administrador") || User.IsInRole("adminitrador") || User.IsInRole("administradores");
}

<!-- HERO consistente -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">@Model.Nombre</h1>
        <p class="store-subtitle mb-0">Detalle de categoría</p>
    </div>
    <div class="d-inline-flex align-items-center gap-2">
        @if (esAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-outline-secondary">Editar</a>
        }
        <a asp-action="Index" class="btn btn-primary">Volver al listado</a>
    </div>
</div>

<!-- TARJETA sin media -->
<div class="card category-card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="p-3 p-md-4">

        <!-- Chip de ID -->
        <div class="mb-3">
            <span class="chip-id">#@Model.CategoriaId</span>
        </div>

        <!-- Grilla de información -->
        <div class="detail-grid-cat">
            <div class="detail-item-cat">
                <div class="label-cat">Nombre</div>
                <div class="value-cat fw-semibold">@Model.Nombre</div>
            </div>
            <div class="detail-item-cat">
                <div class="label-cat">Identificador</div>
                <div class="value-cat">#@Model.CategoriaId</div>
            </div>
        </div>

        <!-- Acciones -->
        <div class="detail-actions-cat mt-4">
            @if (esAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.CategoriaId" class="btn btn-sm btn-outline-secondary btn-action">Editar</a>
            }
            <a asp-action="Index" class="btn btn-sm btn-outline-info btn-action">Volver</a>
        </div>
    </div>
</div>
