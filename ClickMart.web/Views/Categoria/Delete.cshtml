@model ClickMart.web.DTOs.CategoriaDTOs.CategoriaResponseDTO
@{
    ViewData["Title"] = "Eliminar categoría";
}

<!-- HERO consistente -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Eliminar categoría</h1>
        <p class="store-subtitle mb-0">Esta acción no se puede deshacer</p>
    </div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Volver al listado</a>
</div>

<!-- Tarjeta de confirmación -->
<form asp-action="Delete" method="post" class="card shadow-sm border-0 rounded-4 p-3 p-md-4 form-card">
    <input type="hidden" name="id" value="@Model.CategoriaId" />

    <div class="alert alert-warning mb-3">
        ¿Seguro que deseas eliminar esta categoría?
    </div>

    <!-- Resumen en grilla (mismo estilo de Detalle) -->
    <div class="mb-3">
        <span class="chip-id">#@Model.CategoriaId</span>
    </div>

    <div class="detail-grid-cat mb-2">
        <div class="detail-item-cat">
            <div class="label-cat">Nombre</div>
            <div class="value-cat fw-semibold">@Model.Nombre</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Identificador</div>
            <div class="value-cat">#@Model.CategoriaId</div>
        </div>
    </div>

    <!-- Acciones -->
    <div class="form-actions mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary btn-action">Cancelar</a>
        <button type="submit" class="btn btn-danger btn-action">Eliminar</button>
    </div>
</form>
