@model ClickMart.web.DTOs.UsuarioDTOs.UsuarioCreateDTO
@{
    ViewData["Title"] = "Crear usuario";
}

<!-- HERO consistente -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Crear usuario</h1>
        <p class="store-subtitle mb-0">Onboarding express • Alta de cuenta</p>
    </div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Volver al listado</a>
</div>

<form asp-action="Create" method="post" class="card shadow-sm border-0 rounded-4 p-3 p-md-4 form-card">
    <div asp-validation-summary="ModelOnly" class="invalid-feedback d-block mb-3"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nombre" class="form-label form-label-ux">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="invalid-feedback d-block"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label form-label-ux">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Telefono" class="form-label form-label-ux">Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="invalid-feedback d-block"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Direccion" class="form-label form-label-ux">Dirección</label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="invalid-feedback d-block"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label form-label-ux">Password</label>
            <input asp-for="PasswordHash" class="form-control" type="password" />
            <small class="text-muted">La API hashea este valor internamente.</small>
            <span asp-validation-for="PasswordHash" class="invalid-feedback d-block"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="RolId" class="form-label form-label-ux">Rol</label>
            @if (User.IsInRole("Admin") || User.IsInRole("Administrador"))
            {
                @Html.DropDownListFor(
                         m => m.RolId,
                         (IEnumerable<SelectListItem>)ViewBag.Roles,
                         "-- Selecciona un rol --",
                         new { @class = "form-select" })
            }
            else
            {
                @Html.HiddenFor(m => m.RolId)
                <input class="form-control" value="(Asignado automáticamente)" disabled />
            }
            <span asp-validation-for="RolId" class="invalid-feedback d-block"></span>
        </div>
    </div>

    <div class="form-actions mt-4">
        <button type="submit" class="btn btn-success btn-action">Guardar</button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-action">Volver</a>
    </div>

    @if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
    {
        <div class="alert alert-danger mt-3 mb-0">@ViewBag.Error</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
