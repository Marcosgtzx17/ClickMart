@model ClickMart.web.DTOs.UsuarioDTOs.UsuarioListadoDTO
@{
    ViewData["Title"] = "Eliminar usuario";
}
<h2>@ViewData["Title"]</h2>
<div class="alert alert-warning">¿Seguro que deseas eliminar este usuario?</div>
<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.UsuarioId</dd>
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.UsuarioId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>
