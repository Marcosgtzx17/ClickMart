@model ClickMart.web.DTOs.UsuarioDTOs.UsuarioListadoDTO
@{
    ViewData["Title"] = "Eliminar usuario";
    var block = ViewBag.BlockInfo as dynamic; // { Message, Pedidos, Resenas }
}

<!-- HERO consistente -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Eliminar usuario</h1>
        <p class="store-subtitle mb-0">Esta acción no se puede deshacer</p>
    </div>
    <a asp-action="Index" class="btn btn-primary btn-lg">Volver al listado</a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger d-flex align-items-start" role="alert">
        <div class="me-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                 class="bi bi-exclamation-triangle" viewBox="0 0 16 16">
                <path d="M7.938 2.016a.13.13 0 0 1 .125 0l6.857 3.94c.11.063.18.18.18.309v7.369a.36.36 0 0 1-.18.309l-6.857 3.94a.13.13 0 0 1-.125 0l-6.857-3.94A.36.36 0 0 1 1 13.634V6.265a.36.36 0 0 1 .18-.309l6.857-3.94z" />
                <path d="M7.002 11a1 1 0 1 0 2.002 0 1 1 0 0 0-2.002 0zM7.1 5.995a.905.905 0 1 1 1.81 0l-.35 2.81a.555.555 0 1 1-1.11 0l-.35-2.81z" />
            </svg>
        </div>
        <div>
            <h5 class="alert-heading mb-1">No se puede eliminar</h5>
            <p class="mb-2">
                @Html.ValidationSummary(excludePropertyErrors: true)
            </p>

            @if (block != null)
            {
                <div class="small text-muted">
                    @block.Message
                    <div class="mt-2 d-flex flex-wrap gap-2">
                        @if (block.Pedidos != null)
                        {
                            <span class="badge bg-warning text-dark">
                                Pedidos vinculados: @block.Pedidos
                            </span>
                        }
                        @if (block.Resenas != null)
                        {
                            <span class="badge bg-info text-dark">
                                Reseñas vinculadas: @block.Resenas
                            </span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

<div class="card shadow-sm border-0 rounded-4 p-3 p-md-4">
    <div class="alert alert-warning mb-4">¿Seguro que deseas eliminar este usuario?</div>

    <!-- Chips resumen -->
    <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
        <span class="chip-id">#@Model.UsuarioId</span>
        <span class="badge rounded-pill bg-success-subtle text-success fw-semibold">@Model.Email</span>
        <span class="badge rounded-pill bg-secondary-subtle text-secondary fw-semibold">@Model.Rol</span>
    </div>

    <!-- Grid de detalle -->
    <div class="detail-grid-cat">
        <div class="detail-item-cat">
            <div class="label-cat">Nombre</div>
            <div class="value-cat fw-medium">@Model.Nombre</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Email</div>
            <div class="value-cat">@Model.Email</div>
        </div>
        <div class="detail-item-cat">
            <div class="label-cat">Rol</div>
            <div class="value-cat">@Model.Rol</div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.UsuarioId" />
        <div class="form-actions">
            <a asp-action="Index" class="btn btn-outline-secondary btn-action">Cancelar</a>
            <button type="submit" class="btn btn-danger btn-action">Eliminar</button>
        </div>
    </form>
</div>