@model IEnumerable<ClickMart.web.DTOs.UsuarioDTOs.UsuarioListadoDTO>
@{
    ViewData["Title"] = "Usuarios";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Rol</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    var isAdmin = !string.IsNullOrWhiteSpace(u.Rol) &&
                    (u.Rol.Equals("Admin", StringComparison.OrdinalIgnoreCase) ||
                    u.Rol.Equals("Administrador", StringComparison.OrdinalIgnoreCase));
                    var badgeClass = isAdmin ? "badge bg-warning text-dark" : "badge bg-secondary text-dark";

                    <tr>
                        <td>@u.UsuarioId</td>
                        <td>@u.Nombre</td>
                        <td>@u.Email</td>
                        <td>@(string.IsNullOrWhiteSpace(u.Telefono) ? "—" : u.Telefono)</td>
                        <td>@(string.IsNullOrWhiteSpace(u.Direccion) ? "—" : u.Direccion)</td>
                        <td><span class="@badgeClass">@(!string.IsNullOrWhiteSpace(u.Rol) ? u.Rol : "—")</span></td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-outline-secondary">Ver</a>
                            <a asp-action="Edit" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@u.UsuarioId" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
