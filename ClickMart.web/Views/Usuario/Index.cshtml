@model IEnumerable<ClickMart.web.DTOs.UsuarioDTOs.UsuarioListadoDTO>
@{
    ViewData["Title"] = "Usuarios";
}

<!-- HERO -->
<div class="store-hero mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="store-title mb-1">Usuarios</h1>
        <p class="store-subtitle mb-0">Administración de cuentas ClickMart</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">Nuevo usuario</a>
</div>

@if (TempData["Ok"] != null)
{
     <div class="alert alert-success shadow-sm">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
     <div class="alert alert-danger  shadow-sm">@TempData["Error"]</div>
}
@if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
{
     <div class="alert alert-danger shadow-sm">@ViewBag.Error</div>
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <table class="table table-modern table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:84px">#</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th style="width:140px">Teléfono</th>
                    <th style="width:120px">Rol</th>     @* Rol más a la izquierda y compacto *@
                    <th>Dirección</th>
                    <th class="text-end" style="width:220px">Acciones</th> @* Columna más angosta *@
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model ?? Enumerable.Empty<ClickMart.web.DTOs.UsuarioDTOs.UsuarioListadoDTO>())
                {
                    var id = u.UsuarioId;
                    var rol = (u.Rol ?? "").Trim();
                    var low = rol.ToLowerInvariant();

                    var roleClass =
                    low.Contains("admin") ? "role-badge admin" :
                    (low.Contains("vendedor") || low.Contains("seller") ||
                    low.Contains("moderador")) ? "role-badge staff" :
                    "role-badge user";

                    <tr class="row-hover">
                        <td><span class="badge rounded-pill bg-info-subtle text-info-emphasis border">#@id</span></td>
                        <td class="fw-semibold">@u.Nombre</td>
                        <td>@u.Email</td>
                        <td>@(string.IsNullOrWhiteSpace(u.Telefono) ? "—" : u.Telefono)</td>
                        <td><span class="@roleClass">@((string.IsNullOrWhiteSpace(rol)) ? "—" : rol)</span></td>
                        <td>@(string.IsNullOrWhiteSpace(u.Direccion) ? "—" : u.Direccion)</td>

                        <td class="text-end">
                            <!-- Podio: 1 arriba (Ver), 2 abajo (Editar/Eliminar) -->
                            <div class="actions-podium">
                                <a asp-action="Details" asp-route-id="@u.UsuarioId"
                                   class="btn btn-sm btn-outline-info podium-top">Ver</a>

                                <a asp-action="Edit" asp-route-id="@u.UsuarioId"
                                   class="btn btn-sm btn-outline-secondary">Editar</a>

                                <a asp-action="Delete" asp-route-id="@u.UsuarioId"
                                   class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
