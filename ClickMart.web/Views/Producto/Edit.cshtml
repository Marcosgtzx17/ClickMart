@model ClickMart.web.DTOs.ProductoDTOs.ProductoUpdateDTO
@{
    ViewData["Title"] = "Editar producto";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow-sm p-3">
    <input type="hidden" name="id" value="@ViewBag.Id" />
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" />
        </div>
        <div class="col-md-6">
            <label asp-for="Marca" class="form-label"></label>
            <input asp-for="Marca" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label asp-for="Talla" class="form-label"></label>
            <input asp-for="Talla" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="CategoriaId" class="form-label"></label>
            <input asp-for="CategoriaId" class="form-control" type="number" />
        </div>
        <div class="col-md-6">
            <label asp-for="DistribuidorId" class="form-label"></label>
            <input asp-for="DistribuidorId" class="form-control" type="number" />
        </div>
        <div class="col-12">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
        </div>
        <div class="col-12">
            <label class="form-label">Nueva imagen (opcional)</label>
            <input type="file" name="ImagenArchivo" accept=".png,.jpg,.jpeg,.gif,.webp" class="form-control" />
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
    <div class="text-danger mt-2">@ViewBag.Error</div>
</form>
