@model List<ClickMart.web.DTOs.ProductoDTOs.ProductoResponseDTO>
@{
    ViewData["Title"] = "Productos";
    var ratings = ViewBag.Ratings as Dictionary<int, double> ?? new();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Nuevo producto</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px">#</th>
                    <th>Nombre</th>
                    <th style="width:140px">Precio</th>
                    <th style="width:220px">Calificación</th>
                    <th class="text-end" style="width:240px"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    var i = 1;
                    foreach (var p in Model)
                    {
                        var avg = ratings.ContainsKey(p.ProductoId) ? ratings[p.ProductoId] : 0.0;
                        var rounded = (int)Math.Round(avg, MidpointRounding.AwayFromZero);
                        <tr>
                            <td>@i</td>
                            <td>@p.Nombre</td>
                            <td>@p.Precio.ToString("C")</td>
                            <td>
                                <span class="stars-view" aria-label="@($"{avg:0.0} de 5")">
                                    @for (var s = 1; s <= 5; s++)
                                    {
                                        <span class="star @(s <= rounded ? "active" : "")">★</span>
                                    }
                                </span>
                                <span class="ms-1 text-muted">@avg.ToString("0.0")</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@p.ProductoId" class="btn btn-sm btn-outline-info">Ver</a>
                                <a asp-action="Edit" asp-route-id="@p.ProductoId" class="btn btn-sm btn-outline-secondary">Editar</a>
                                <a asp-controller="Resena"
                                   asp-action="Create"
                                   asp-route-productoId="@p.ProductoId"
                                   class="btn btn-sm btn-outline-primary">
                                    Reseñar
                                </a>
                                <a asp-action="Delete" asp-route-id="@p.ProductoId" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">No hay productos</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
