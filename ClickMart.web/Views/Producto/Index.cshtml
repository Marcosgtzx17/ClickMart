@model IEnumerable<ClickMart.web.DTOs.ProductoDTOs.ProductoResponseDTO>
@inject IConfiguration Config

@{
    ViewData["Title"] = "Productos";

    // Flag local para mostrar botones solo a admins (incluye el typo legacy)
    var esAdmin = User.IsInRole("Admin")
               || User.IsInRole("Administrador")
               || User.IsInRole("adminitrador");

    // URL base absoluta de la API (normaliza para terminar en /api/)
    var api = Config["ApiBaseUrl"] ?? "";
    if (!api.EndsWith("/")) api += "/";
    if (!api.EndsWith("/api/")) api = api.TrimEnd('/') + "/api/";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    @if (esAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">Nuevo producto</a>
    }
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (!string.IsNullOrWhiteSpace((string?)ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:72px">Img</th>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Marca</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var p in Model)
                    {
                        var imgUrl = $"{api}producto/{p.ProductoId}/imagen";
                        <tr>
                            <td>
                                @if (p.TieneImagen)
                                {
                                    <img src="@imgUrl"
                                         alt="img"
                                         class="rounded"
                                         style="width:56px;height:56px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="bg-light border rounded d-inline-block"
                                         style="width:56px;height:56px;"></div>
                                }
                            </td>
                            <td>@p.ProductoId</td>
                            <td>@p.Nombre</td>
                            <td>$ @p.Precio</td>
                            <td>@p.Stock</td>
                            <td>@p.Marca</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@p.ProductoId" class="btn btn-sm btn-outline-secondary">Ver</a>
                                @if (esAdmin)
                                {
                                    <a asp-action="Edit" asp-route-id="@p.ProductoId" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-action="Delete" asp-route-id="@p.ProductoId" class="btn btn-sm btn-danger">Eliminar</a>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
